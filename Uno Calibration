/**
 * This code is to calibrate the load cells while using the Arduino Uno.
 */

#include "HX711.h"

//Arduino Uno and HX711 Wiring Setup
const int LOADCELL_DOUT_PIN = 4;
const int LOADCELL_DOUT_SCK = 5;

HX711 scale;

void setup() {
  
  Serial.begin(57600);
  scale.begin(LOADCELL_DOUT_PIN, LOADCELL_DOUT_SCK);
  
  Serial.println("HX711 Calibration");
  
  scale.set_scale(4.5422);
  Serial.println("scale.set_scale completed");
  scale.tare();
  Serial.println("scale.tare completed");
  Serial.println("Please place a know weight on the scale");
  

}

void loop() {

  scale.get_units(10);
  Serial.println(scale.get_units(10));

}
